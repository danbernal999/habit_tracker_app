# Stage 1: Build
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build -- --configuration production

# Stage 2: Runtime Angular directo
FROM node:18-alpine
WORKDIR /app

# Definir la version de Angular CLI 
# RUN npm install -g @angular/cli@16.2.10

# Instalar serve para servir la aplicaci贸n en producci贸n
RUN npm install -g serve

# Copiar archivos compilados del stage anterior
COPY --from=build /app/dist/frontend ./build

# Comando para servir la aplicaci贸n en producci贸n

CMD ["serve", "-s", "build", "-l", "4200"]
